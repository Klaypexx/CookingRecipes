meta {
  name: [3] Refresh
  type: http
  seq: 3
}

post {
  url: {{baseUrl}}/auth/refresh
  body: json
  auth: none
}

assert {
  res.status: eq 200
  res.body: isString
  res.body: neq {{oldToken}}
}

script:pre-request {
  const oldToken = bru.getEnvVar("token");
  
  bru.setVar('oldToken', oldToken);
}

script:post-response {
  let responseBody = res.getBody();
  
  if (res.getStatus() == 200) {
    bru.setEnvVar("token", responseBody);
  }
  
}
