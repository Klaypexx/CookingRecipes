meta {
  name: [16] Get user statistic after delete recipe
  type: http
  seq: 16
}

get {
  url: {{baseUrl}}/users/statistic
  body: none
  auth: bearer
}

auth:bearer {
  token: {{token}}
}

tests {
  test("status code 200", function() {
    const data = res.getBody();
    expect(res.getStatus()).to.equal(200);
  });
  
  test("recipesCount value is 0", function() {
    const data = res.getBody();
    expect(data.recipesCount).to.be.a("number");
    expect(data.recipesCount).to.equal(0);
  });
  
  test("likesCount value is 0", function() {
    const data = res.getBody();
    expect(data.likesCount).to.be.a("number");
    expect(data.likesCount).to.equal(0);
  });
  
  test("favouritesCount value is 0", function() {
    const data = res.getBody();
    expect(data.favouritesCount).to.be.a("number");
    expect(data.favouritesCount).to.equal(0);
  });
}
